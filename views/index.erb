<html>
<head>
  <title>Sudoku Game</title>   
  <!-- link to the CSS stylesheet -->
  <link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
  <link href="http://fonts.googleapis.com/css?family=Iceland" rel="stylesheet" type="text/css">
</head>
<body>
<h1>SUDOKU</h1>
<div id="sudoku">

  <form action="/" method="post">
  <!-- one div for each row -->
  <% 3.times do |row| %>
    <div class="row">
        <!-- we want to create separate div elements for boxes to style them using CSS -->
      <% 3.times do |box| %>
          <div class="box">
         <!-- each box will have nine cells -->
         <% 3.times do |cell_row| %>
              <div class="cell-row">
              <% 3.times do |cell| %>
              <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
              <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
    <!-- all boxes, rows and cells -->
    <button>Check solution</button>
  </form>
    </form><form action ="/restart" method="post">
    <button>restart</button>
  </form>
  <form action ="/easy" method="post">
    <button>easy</button>
  </form>
  <form action ="/medium" method="post">
    <button>medium</button>
  </form><form action ="/hard" method="post">
    <button>hard</button>
  </form>
  </div>
    <div id="flash">
    <%= flash[:notice] %>
  </div>
</body>
</html>