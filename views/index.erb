<html>
<head>
  <title>Sudoku Game</title>   
  <!-- link to the CSS stylesheet -->
  <link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
  <link href="http://fonts.googleapis.com/css?family=Iceland" rel="stylesheet" type="text/css">
</head>
<body>


<div id="sudoku">

  

  <div id="container">

    <div id="game-container">

    <h1>SUDOKU</h1>
    <form class="session-form" action="/" method="post">
      <!-- one div for each row -->
      <% 3.times do |row| %>
        <div class="row">
            <!-- we want to create separate div elements for boxes to style them using CSS -->
          <% 3.times do |box| %>
            <div class="box">
             <!-- each box will have nine cells -->
              <% 3.times do |cell_row| %>
                  <div class="cell-row">
                    <% 3.times do |cell| %>
                      <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
                    <% end %>
                  </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div id="button-container">
      <form class="button-form" action ="/easy" method="post"> <button class="level">easy</button> </form>
      <form class="button-form" action ="/medium" method="post"> <button class="level">medium</button> </form>
      <form class="button-form" action ="/hard" method="post"> <button class="level">hard</button> </form>
    </div>

    <div id="session-button-container">
      <button class="session-button">check answers</button> </form>
      <form class="session-form" action ="/restart" method="post"> <button class="session-button">restart game</button> </form>
      <form class="session-form" action ="/solution" method="post"> <button class="session-button">give up</button> </form>
    </div>
    <div id="flash"> <%= flash[:notice] %> </div>

  </div>
    <!-- all boxes, rows and cells -->
    
 
</div>

</body>
</html>